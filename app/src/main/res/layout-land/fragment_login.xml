<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/sala"
        android:textColor="@color/primary_dark"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="@dimen/login_text_width"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:layout_width="@dimen/login_text_width"
                android:layout_height="@dimen/edt_login_height"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/edt_login_background"
                android:hint="@string/username"
                android:inputType="text|textNoSuggestions"
                android:padding="@dimen/edt_padding"
                android:singleLine="true"
                android:textColor="@color/primary_text" />

            <EditText
                android:layout_width="@dimen/login_text_width"
                android:layout_height="@dimen/edt_login_height"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edt_login_background"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="@dimen/edt_padding"
                android:singleLine="true"
                android:textColor="@color/primary_text" />

            <Button
                android:layout_width="@dimen/login_text_width"
                android:layout_height="@dimen/edt_login_height"
                android:background="@drawable/btn_login_background"
                android:text="@string/login"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="@dimen/login_text_width"
                android:layout_height="@dimen/edt_login_height"
                android:background="@android:color/transparent"
                android:text="@string/forgot_password"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/login_text_width"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="9">

            <RelativeLayout
                android:layout_width="@dimen/btn_social_network_width"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imbSignUp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_sign_up_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_logo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/btn_social_network_width"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imbFacebook"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_facebook_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/facebook" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/btn_social_network_width"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_google_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/google_plus" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>